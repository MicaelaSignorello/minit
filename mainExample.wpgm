import wollok.game.*
import personajes.*
import mapa.*
import interfaz.*

program minit{
	game.title("Minit!")
	game.height(12)
	game.width(25)
	game.boardGround("background.png")

	game.addVisual(zarek)

	game.addVisual(piedra)

	game.addVisual(reloj)
	game.addVisual(timer)
	
	game.onTick(1000, "timer", { reloj.restarSegundos(1) })

	// Dibujado del mapa:
	mapping.dibujar()
	// -------- En pruebas aun.

	keyConfig.init()
	controlDeColisiones.init()

	game.start()
}